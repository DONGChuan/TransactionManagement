<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

	<hibernate-mapping>
 		<class name="Criticism" table="tb_criticism">
			<meta attribute="class-description">
	 			This class contains the employee detail. 
	      	</meta>
		    <id name="criticismID" column="criticismID" type="int"/>
	      	<property name="criticismContent" column="criticismContent" type="string"/>
	     	<property name="employeeID" column="employeeID" type="int"/>
	     	<property name="criticismTime" column="criticismTime" type="date"/>
	     	<property name="messageID" column="messageID" type="int"/>
   		</class>
	</hibernate-mapping>
