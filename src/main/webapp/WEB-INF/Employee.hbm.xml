<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

	<hibernate-mapping>
 		<class name="Employee" table="tb_criticism">
			<meta attribute="class-description">
	 			This class contains the employee detail. 
	      	</meta>
		    <id name="employeeID" column="employeeID" type="int"/>
	      	<property name="employeeName" column="employeeName" type="string"/>
	     	<property name="employeeSex" column="employeeSex" type="boolean"/>
	     	<property name="employeeBirth" column="employeeBirth" type="date"/>
	     	<property name="employeePhone" column="employeePhone" type="string"/>
	     	<property name="employeePlace" column="employeePlace" type="string"/>
	     	<property name="joinTime" column="joinTime" type="date"/>
	     	<property name="password" column="password" type="string"/>
	     	<property name="isLead" column="isLead" type="boolean"/>
   		</class>
	</hibernate-mapping>